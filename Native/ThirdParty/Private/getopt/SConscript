import os
Import( 'env', 'buildOS' )

if buildOS == 'Windows':
	getoptEnv = env.Clone()
	getoptIncludeDir = getoptEnv.Dir('.');
	getoptLib = getoptEnv.StaticLibrary(
	  target = 'getopt',
	  source = Glob( '*.c' )
	  )

	getoptFlags = {
	  'CPPPATH': [getoptIncludeDir],
	  'LIBS': [getoptLib],
	}
	Export( 'getoptFlags' )
