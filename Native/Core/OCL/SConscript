Import( 'coreEnv', 'buildOS', 'openclFlags' )

# OpenGL Flags
if buildOS == 'Linux':
  coreEnv.Append( LINKFLAGS = [ '-lGLEW' ] )
  coreEnv.ParseConfig( 'pkg-config --cflags --libs gtk+-2.0' )
  coreEnv.ParseConfig( 'pkg-config --cflags --libs gtkglext-1.0' )
if buildOS == 'Darwin':
  coreEnv.Append( CPPPATH = ['/opt/local/include'] )
  coreEnv.Append( LIBS = [File('/opt/local/lib/libGLEW.a')] )
  coreEnv.Append( FRAMEWORKS = ['OpenGL'] )
if buildOS == 'Windows':
	Import( 'glewFlags' )
	coreEnv.MergeFlags( glewFlags )

if buildOS == 'Darwin' or buildOS == 'Windows':
  coreEnv.MergeFlags( openclFlags )
  coreEnv.Prepend( LIBS = coreEnv.StaticLibrary( 'OCL', Glob('*.cpp') ) )
elif buildOS == 'Linux':
  import os
  if not os.environ.has_key('OPENCL_SDK'):
    print("--------- WARNING: For the OpenCL Extension to compile on Linux, you need to specify the path to the OpenCL SDK in the OPENCL_SDK environment variable.")
    print("--------- Skipping OCL extension, no OpenCL SDK found.")
  else:
    coreEnv.MergeFlags( openclFlags )
    coreEnv.Prepend( LIBS = coreEnv.StaticLibrary( 'OCL', Glob('*.cpp') ) )
