Import( 'extsEnv', 'openexrFlags', 'fabricExtsDistDir' )

exrPluginEnv = extsEnv.Clone()
exrPluginEnv.MergeFlags( openexrFlags )
exrPlugin = exrPluginEnv.SharedLibrary( 'FabricEXR', Glob('*.cpp') ),
exrManifest = exrPluginEnv.File('FabricEXR.fpm.json'),

installAction = Install( fabricExtsDistDir, [exrPlugin,exrManifest] )
extsEnv.CopyToAppdataIfWindows( installAction )

Alias( 'exrExt', [
  exrPlugin,
  exrManifest,
  installAction
] )
