Import( 'extsEnv', 'fabricExtsDistDir' )

hdrPluginEnv = extsEnv.Clone()
hdrPlugin = hdrPluginEnv.SharedLibrary( 'FabricHDR', Glob('*.cpp') ),
hdrManifest = hdrPluginEnv.File('FabricHDR.fpm.json'),

Alias( 'hdrExt', [
  hdrPlugin,
  hdrManifest,
  Install( fabricExtsDistDir, [hdrPlugin,hdrManifest] )
] )
