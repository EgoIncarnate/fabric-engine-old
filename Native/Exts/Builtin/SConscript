Import( 'baseEnv', 'buildOS' )

extsEnv = baseEnv.Clone()
Export( 'extsEnv' )

aliases = [
    'exrExt',
    'hdrExt',
    'pngExt',
    'tgaExt',
    'viconExt'
]

dirs = [
    'EXR',
    'HDR',
    'PNG',
    'TGA',
    'VICON'
]

if buildOS != 'Windows':
  dirs += ['VIDEO']
  aliases += ['videoExt']

SConscript( dirs=dirs )

Alias( 'exts', aliases )
