import os
Import( 'baseEnv', 'buildOS' )

aliases = [
  'exrExt',
  'hdrExt',
  'oglExt',
  #'oclExt',
  'pngExt',
  'tgaExt',
  'viconExt',
]

dirs = [
  'EXR',
  'HDR',
  #'OCL',
  'OGL',
  'PNG',
  'TGA',
  'VICON',
]

if buildOS != 'Windows':
  dirs += ['VIDEO']
  aliases += ['videoExt']

SConscript( dirs=dirs )

Alias( 'builtinExts', aliases )
